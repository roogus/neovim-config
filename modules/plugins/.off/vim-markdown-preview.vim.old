" 'JamshedVesuna/vim-markdown-preview'
" https://github.com/JamshedVesuna/vim-markdown-preview

" If using Grip, uncomment following line
" for github preview
let vim_markdown_preview_github=1

" If using Markdown.pl for rendering
"let vim_markdown_preview_perl=1

" If using pandoc
"let vim_markdown_preview_pandoc=1

" Use xdg_open instead of the 'see' program
"let vim_markdown_preview_use_xdg_open=1

" Display images with the hotkey mapping
let vim_markdown_preview_toggle=2

" Display images automatically on buffer write
"let vim_markdown_preview_toggle=3

"Disregard images and still automatically preview on buffer write
let vim_markdown_preview_toggle=0

" Set key-mapping for preview activation
"let vim_markdown_preview_hotkey='<C-m>'

" Set the preview brosers
"let vim_markdown_preview_browser='Google Chrome'

" Remove the rendered preview file
let vim_markdown_preview_temp_file=1

